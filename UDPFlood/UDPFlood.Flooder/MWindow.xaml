<Window x:Class="UDPFlood.Flooder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPFlood.Flooder"
        xmlns:vms="clr-namespace:UDPFlood.Flooder.ViewModels"
        mc:Ignorable="d"
        Title="UDPFlood Флудер" Height="400" Width="600" ResizeMode="CanMinimize">
    <Window.DataContext>
        <vms:MWindowVM/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="IP жертвы:"
                />
            <TextBox 
                Grid.Column="1"
                VerticalContentAlignment="Center"
                Margin="5 0"
                Text="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />
            <Button 
                Grid.Column="2"
                Margin="5 0"
                Content="🔎 Анализ портов"
                Command="{Binding CheckPorts}"
                />
            <Button 
                Grid.Column="3"
                Margin="5 0"
                Content="💣 Начать атаку"
                Command="{Binding StartOrStopAttack}"
                />
        </Grid>

        <Grid Grid.Row="1" Margin="0 5 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <GroupBox 
                Grid.Column="0"
                Margin="0 0 5 0"
                Header="Открытые порты"
                >
                <ListBox 
                    BorderThickness="0"
                    ItemsSource="{Binding OpenedPorts}"
                    FontFamily="Consolas"
                    >
                </ListBox>
            </GroupBox>

            <GroupBox 
                Grid.Column="1"
                Margin="5 0 0 0"
                Header="Закрытые порты"
                >
                <ListBox 
                    BorderThickness="0"
                    FontFamily="Consolas"
                    >
                </ListBox>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
